generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/meetings-client"
}

datasource db {
  provider = "postgresql"
  url      = env("MEETINGS_DATABASE_URL")
}

model Meeting {
  meeting_id Int       @id @default(autoincrement())
  class_id   Int
  topic      String    @db.VarChar
  start_time DateTime  @db.Timestamp(6)
  end_time   DateTime  @db.Timestamp(6)
  type       String    @default("public") @db.VarChar
  created_at DateTime  @default(now()) @db.Timestamp(6)
  
  attendees MeetingAttendee[]

  @@map("meetings")
}

model MeetingAttendee {
  attendance_id Int      @id @default(autoincrement())
  meeting_id    Int
  user_id       Int
  joined_at     DateTime @default(now()) @db.Timestamp(6)
  device_id     String?  @db.VarChar
  
  meeting Meeting @relation(fields: [meeting_id], references: [meeting_id], onDelete: Cascade)

  @@unique([meeting_id, user_id])
  @@map("meeting_attendees")
}